# File storing address aliases
set alias_file    = ~/.mutt/alias
set sort_alias    = alias
set reverse_alias = yes
source $alias_file

set header_cache     = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates
set mailcap_path     = ~/.mutt/mailcap       # entries for filetypes
set tmpdir           = ~/.mutt/tmp           # where to keep temp files
set signature        = ~/.mutt/sig           # my signature file

# Basic Options --------------------------------------
set wait_key = no    # shut up, mutt
# set mbox_type = Maildir  # mailbox type
set timeout = 5      # idle time before scanning
set mail_check = 100 # minimum time between scans
set move = no        # gmail does that
set delete           # don't ask, just do
unset confirmappend  # don't ask, just do!
set quit             # don't ask, just do!!
unset mark_old       # read/new is good enough for me
set pipe_decode      # strip headers and eval mimes when piping
set thorough_search  # strip headers and eval mimes before searching
set imap_keepalive = 900
set smtp_authenticators = 'gssapi:login'  # for gmail sending....

# These two lines appear to be needed on some Linux distros, like Arch Linux
set ssl_starttls = yes
set ssl_force_tls = yes
set ssl_verify_host = no
set ssl_verify_dates = no

# HTML mail
auto_view text/html
alternative_order text/plain text/enriched text/html

# Header related stuff
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc

ignore *
unignore from: date subject to cc
unignore x-mailing-list: posted-to:
unignore x-mailer:

# Sorting, Markers etc.
set markers           = no # don't put '+' at the beginning of wrapped lines
set pager_index_lines = 10 # how large is the index window?
set sort              = 'threads'
set sort_aux          = 'last-date-received'

# Set which Editor to use for composing Emails.
set editor= '/usr/bin/vim'

# Remap bounce-message function to "B"
bind index B bounce-message
bind index l limit
# Open URL by <c-b>
macro index \cb |urlview\n
macro pager \cb |urlview\n

# color scheme
source ~/.mutt/mutt-colors-solarized/mutt-colors-solarized-dark-16.muttrc

# language
set charset="utf-8"
set send_charset="utf-8"
set assumed_charset="utf-8:iso-2022-jp:euc-jp:shift_jis"
set thorough_search=yes
set rfc2047_parameters=yes
set edit_headers=yes

### --------------- Account settings ---------------
source ~/.mutt/private.muttrc
