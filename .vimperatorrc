" toolbar: #343c45
" selection-background: #1d4f73
" selection-text: #f5f7fa
" splitters: #000000
" comment: #5c6773
"
" background-body: #14171a
" background-sidebar: #181d20
" background-attention: #b28025
"
" body-text: #8fa1b2
" foreground-text-grey: #b6babf
" content-text-high-contrast: #a9bacb
" content-text-grey: #8fa1b2
" content-text-dark-grey: #667380
"
" blue: #46afe3
" purple: #6b7abb
" pink: #df80ff
" red: #eb5368
" orange: #d96629
" light-orange: #d99b28
" green: #70bf53
" blue: #5e88b0
" yellow: #ffffb4

hi Hint background: #eee; color: #666; letter-spacing: 1px; font-size: 16px; padding-left: 3px; padding-right: 3px; border-radius: 3px; border: 1px solid #666;
hi HintElem opacity: 1;
hi HintActive background: #000; color: #fff; font-weight: bold;

hi Normal background: #343c45; color: #8fa1b2;
hi CmdLine background: #343c45; color: #8fa1b2;
hi CompTitle background: #343c45; color: #8fa1b2;
hi CompTitle>* border-top: 1px solid #8fa1b2; border-bottom: 1px solid #8fa1b2; padding 1px; font-weight: bold;
hi CompItem background: #343c45; color: #8fa1b2;
hi CompItem[selected] background: #5c6773; color: #8fa1b2; font-weight: bold;
hi Filter background: #343c45; color: #8fa1b2; font-weight: bold;
hi CompDesc background: #343c45; color: #8fa1b2;
hi CompDesc[selected] background: #5c6773; color: #8fa1b2; font-weight: bold;

source .vimperatorrc.local
