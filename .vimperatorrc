" vim: set filetype=vim :

set cpt=tlsS
set focuscontent
set gui=none
set gui=tabs
set statuslinevisibility=hidden
set hintchars="asdfghjkl;"
set titlestring=""

let mapleader = ","
nnoremap j 3j
nnoremap k 3k
nnoremap h <c-p>
nnoremap l <c-n>
nnoremap <c-l> :noh<cr>
nnoremap <c-g> g<c-g>
nnoremap <c-q> :noh<cr>
nnoremap ; :
vnoremap ; :
nnoremap s ;
vnoremap <c-e> $
vnoremap V <esc><esc><esc>
nnoremap <leader>r :source ~/.vimperatorrc<cr>:echo "Reload .vimperatorrc"<cr>
nnoremap <leader>h :set gui=none<cr>
nnoremap <leader>s :set gui=navigation<cr>
nnoremap <leader>t :set gui=tabs<cr>
nnoremap <leader>b :set slv=visible<cr>
nnoremap <leader>B :set slv=hidden<cr>
map \'g :tabopen https://github.com/<cr>
map \'m :tabopen https://mail.google.com/mail/u/0/#inbox<cr>
map \'a :tabopen https://us-west-2.console.aws.amazon.com/console/home?region=us-west-2#<cr>
map \'r :tabopen https://www.rarejob.com/reservation/bookmark/#page=1<cr>
map \'n :tabopen https://www.rarejob.com/dna/<cr>
map \'l :tabopen http://www.lumosity.com/app/v4/dashboard<cr>
map \'t :tabopen https://www.youtube.com/watch?v=okshAFHVtL8<cr>
map \'h :tabopen https://dashboard.heroku.com/apps<cr>
map \'jg :tabopen https://github.com/joyz-inc<cr>
map \'jq :tabopen https://joyz.quip.com/<cr>
map \'js :tabopen https://joyz.slack.com/<cr>
map \'ja :tabopen https://app.asana.com/<cr>
map \'jd :tabopen https://tt-develop.herokuapp.com/admin/<cr>
map \'f :tabopen file:///home/shinsuke<cr>
map \'b :tabopen file:///home/shinsuke/doc/books<cr>
map \'d :tabopen file:///home/shinsuke/downloads<cr>
map \'p :emenu Edit.Preferences<cr>

inoremap <c-f> <right>
inoremap <c-b> <left>
cnoremap <c-f> <right>
cnoremap <c-b> <left>
cnoremap <c-p> <up>
cnoremap <c-n> <down>
inoremap <c-p> <up>
inoremap <c-n> <down>

colorscheme darkness
hi Hint background: #eee; color: #666; letter-spacing: 1px; font-size: 16px; padding-left: 5px; padding-right: 5px; border-radius: 5px; border: 2px solid #666;
hi HintElem opacity: 1;
hi HintActive background: #eee;
