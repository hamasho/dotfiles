" vim: set filetype=vim :

set cpt=tlsS
set focuscontent
set gui=none
set gui=tabs
set statuslinevisibility=hidden
set hintchars="asdfghjkl;"
set titlestring=""

let mapleader = ","
nnoremap j 3j
nnoremap k 3k
nnoremap h <c-p>
nnoremap l <c-n>
nnoremap <c-l> :noh<cr>
nnoremap <c-g> g<c-g>
nnoremap <c-q> :noh<cr>
nnoremap ; :
vnoremap ; :
nnoremap : ;
vnoremap : ;
nnoremap s ;
vnoremap <c-e> $
vnoremap V <esc><esc><esc>
nnoremap <leader>r :source ~/.vimperatorrc<cr>:echo "Reload .vimperatorrc"<cr>
nnoremap <leader>h :set gui=none<cr>

nnoremap <leader>t :set gui=tabs<cr>
nnoremap <leader>T :set gui=notabs<cr>
nnoremap <leader>n :set gui=navigation<cr>
nnoremap <leader>N :set gui=nonavigation<cr>
nnoremap <leader>b :set slv=visible<cr>
nnoremap <leader>B :set slv=hidden<cr>

nnoremap \'g :tabopen https://github.com/<cr>
nnoremap \'m :tabopen https://mail.google.com/mail/u/0/#inbox<cr>
nnoremap \'a :tabopen https://us-west-2.console.aws.amazon.com/console/home?region=us-west-2#<cr>
nnoremap \'r :tabopen https://www.rarejob.com/reservation/bookmark/#page=1<cr>
nnoremap \'n :tabopen https://www.rarejob.com/dna/<cr>
nnoremap \'l :tabopen http://www.lumosity.com/app/v4/dashboard<cr>
nnoremap \'t :tabopen https://www.youtube.com/watch?v=okshAFHVtL8<cr>
nnoremap \'f :tabopen file:///home/shinsuke<cr>
nnoremap \'b :tabopen file:///home/shinsuke/doc/books<cr>
nnoremap \'d :tabopen file:///home/shinsuke/downloads<cr>
nnoremap \'p :emenu Edit.Preferences<cr>

inoremap <c-f> <right>
inoremap <c-b> <left>
cnoremap <c-f> <right>
cnoremap <c-b> <left>
cnoremap <c-p> <up>
cnoremap <c-n> <down>
inoremap <c-p> <up>
inoremap <c-n> <down>

let g:my_color_dark1 = '#012345'
let g:my_color_dark2 = '#123456'
let g:my_color_dark3 = '#234567'
let g:my_color_dark4 = '#345678'
let g:my_color_dark5 = '#456789'
let g:my_color_light1 = '#a0adbb'

" firefox devtools dark theme
